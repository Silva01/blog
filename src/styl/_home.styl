
cor-verde = #00875c
cor-vermelha = #870115

html
  position relative
  min-height 100%

body
  margin 0 0 60px

.header
  background-color white
  box-shadow 0 3px 9px #000
  width 100%
  padding .110rem 0 .221rem
  position fixed
  z-index 10


h1
  font-family 'Serif' sans-serif
  font-style normal
  margin 1rem


div h1 a
  font-style normal
  text-decoration none
  color cor-verde

main
  center(1200px)
  padding-top 7rem

main .container-home
  center(300px)
  width 100%
  float left
  height 20rem
  margin-left 5rem
  margin-bottom 5rem
  background-color #ffffff
  border 1px solid cor-verde
  position relative

.tag-card-dev
  font-family "Open Sans" sans-serif
  border 2px solid cor-verde
  border-radius .365rem
  padding .254rem
  margin 1rem

.tag-card-infra
  font-family "Open Sans" sans-serif
  border 2px solid cor-vermelha
  border-radius .365rem
  padding .254rem
  margin 1rem

.tag-card-dev:hover
  background cor-verde

.link-categorias-dev:hover
  color white
  padding 2rem
  text-decoration none

.tag-card-infra:hover
  background cor-vermelha

.link-categorias-infra:hover
  color white
  padding 2rem
  text-decoration none

.link-categorias-dev
  color cor-verde
  padding 2rem
  text-decoration none

.link-categorias-infra
  color cor-vermelha
  padding 2rem
  text-decoration none

main .container-home .titulo-link-card-dev
  font-style normal
  text-decoration none

main .container-home .titulo-link-card-infra
  font-style normal
  text-decoration none

main .container-home .titulo-card-dev
  margin .313rem 0 .938rem
  text-align justify
  font-size 1.620rem
  font-family 'Open Sans' sans-serif
  font-weight 800
  font-style normal
  color cor-verde
  padding 1rem

main .container-home .titulo-card-infra
  margin .313rem 0 .938rem
  text-align justify
  font-size 1.620rem
  font-family 'Open Sans' sans-serif
  font-weight 800
  font-style normal
  color cor-vermelha
  padding 1rem


footer
  position absolute
  bottom 0
  width 100%
  background-color cor-verde
  font-family sans-serif
  color white
  text-align center
  padding 2%

.conteudo
  font-family "Open Sans" sans-serif
  font-style normal
  text-align justify
  padding 1.562rem

.ribbon-dev
  position absolute
  right -5px
  top -5px
  z-index 1
  overflow hidden
  width 75px
  height 75px
  text-align right
  span
    font-size 15px
    font-weight bold
    color white
    text-transform uppercase
    text-align center
    line-height 20px
    transform rotate(45deg)
    -webkit-transform rotate(45deg)
    width 100px
    display block
    background cor-verde
    box-shadow 0 3px 10px -5px rgba(0, 0, 0, 1)
    position absolute
    top 19px
    right -21px


.ribbon-infra
  position absolute
  right -5px
  top -5px
  z-index 1
  overflow hidden
  width 75px
  height 75px
  text-align right
  span
    font-size 15px
    font-weight bold
    color white
    text-transform uppercase
    text-align center
    line-height 20px
    transform rotate(45deg)
    -webkit-transform rotate(45deg)
    width 100px
    display block
    background cor-vermelha
    box-shadow 0 3px 10px -5px rgba(0, 0, 0, 1)
    position absolute
    top 19px
    right -21px


.ribbon-dev span::before
  content ""
  position absolute
  left 0px
  top 100%
  z-index -1
  border-left 3px solid cor-verde
  border-right 3px solid transparent
  border-bottom 3px solid transparent
  border-top 3px solid cor-verde

.ribbon-infra span::before
  content ""
  position absolute
  left 0px
  top 100%
  z-index -1
  border-left 3px solid cor-vermelha
  border-right 3px solid transparent
  border-bottom 3px solid transparent
  border-top 3px solid cor-vermelha

.ribbon-dev span::after
  content ""
  position absolute
  right 0px
  top 100%
  z-index -1
  border-left 3px solid transparent
  border-right 3px solid cor-verde
  border-bottom 3px solid transparent
  border-top 3px solid cor-verde


.ribbon-infra span::after
  content ""
  position absolute
  right 0px
  top 100%
  z-index -1
  border-left 3px solid transparent
  border-right 3px solid cor-vermelha
  border-bottom 3px solid transparent
  border-top 3px solid cor-vermelha

.box-body
  margin-top 4rem